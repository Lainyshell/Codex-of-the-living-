{
  "cisa_endpoints": {
    "primary": "https://cisa.gov/tribal-data-intake",
    "backup": "https://backup.cisa.gov/tribal-intake",
    "emergency": "https://emergency.cisa.gov/intake",
    "documentation": "These CISA endpoint URLs are placeholders and not real CISA endpoints. Before production use, replace them with actual CISA API endpoints and ensure a configuration validation step verifies that the configured endpoints are reachable and correct."
  },
  "encryption": {
    "algorithm": "AES-256-GCM",
    "key_derivation": "PBKDF2-SHA256",
    "iterations": 100000,
    "compliance": "FIPS 140-2"
  },
  "tribal_protection": {
    "filter_sovereign_data": true,
    "protect_ip": true,
    "classifications": {
      "shareable": ["PUBLIC", "SENSITIVE"],
      "protected": ["CONFIDENTIAL", "TRIBAL_SOVEREIGN"]
    }
  },
  "logging": {
    "log_directory": "./logs",
    "log_format": "jsonl",
    "audit_retention_days": 2555,
    "log_all_transmissions": true
  },
  "tribal_entity": {
    "name": "Verdigris Botanica Tribal Nation",
    "jurisdiction": "Tribal Sovereign Territory",
    "sovereignty_protection": "enabled"
  }
}
